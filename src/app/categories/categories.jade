.slider-wrapper
  cms-slider(playlist="vm.featured")

.container
  .ar-desktop
    cms-billboard-ad(class="mt-lg pb-lg center-block adspot" adspot="div-gpt-ad-970x250-0" )

  .mt-big(ng-if="vm.assets['featured'].playList.length > 0")
    cms-category-x2(items="vm.assets['featured'].playList", category="vm.assets['featured'].category" caption="Promoted Shows")

  .ar-desktop
    cms-billboard-ad(class="mt-lg pb-lg center-block adspot" adspot="div-gpt-ad-640x480-0" )
  .ar-mobile
    cms-billboard-ad(class="mt-lg pb-lg center-block adspot" adspot="div-gpt-ad-300x250-0" )

  .mt-lg
    cms-billboard-ad(class="mt-lg pb-lg")

  .mt-big
    cms-category(items="::vm.series", caption="Shows")
