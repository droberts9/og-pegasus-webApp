.row
  .col-xs-7(style="height:400px")
    cms-player(embed_code="::vm.episode.embed_code" playlist="vm.season_episodes")
  .col-xs-5
    p Some Ad {{ ::vm.season_episodes.length }}

.row
  .serie__detail__header
    h1 {{ vm.episode.title }}
    p {{ vm.episode.description }}
    p {{ vm.season.title }}
    p Rating: {{ vm.episode.rating }}
    p Duration: {{ vm.episode.duration | timerFilter }}

.container
  .mt-lg
    cms-billboard-ad(class="mt-lg pb-lg")
  
  .mt-big
    h3 {{ season.title }}
    cms-season(playlist="::vm.season_episodes" onplay="vm.slplay(episode)" followLink="false")
