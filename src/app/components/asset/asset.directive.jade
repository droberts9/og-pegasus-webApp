
.col-md-3.asset(style="max-height: 250px;margin-bottom: 20px")
  a.asset__item(href="#item" style="background-image: url('{{asset.preview_image_url}}');position: relative; display: block; overflow: hidden; width: 250px; height: 250px; background-size: contain; background-repeat: no-repeat;")
    .asset_image()
    .asset__meta(style="position: absolute; top: 120px;overflow: hidden;background-color: #eeeeee; padding: 10px; width: 100%;min-height: 130px;")
      p.asset__title {{ asset.name }}
      p.asset__description {{ asset.description }}
      p.asset__social-buttons

